@using Resources

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">

        <a class="navbar-brand d-flex align-items-center" href="#">
            <img src="~/assets/img/brand/logo-navbar.png" alt="MetroMan" width="32" height="32" class="me-2">
            MetroMan
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNav">

            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/route">@Shared.NavRoute</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/cities">@Shared.NavCities</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/network-maps">@Shared.NavNetworkMaps</a>
                </li>
                <li class="nav-item">
                    @{
                        var langPrefix = "";
                        var currentPath = Request.Path.ToLower();
                        if (currentPath.StartsWith("/zh-hant")) { langPrefix = "/zh-hant"; }
                        else if (currentPath.StartsWith("/en")) { langPrefix = "/en"; }
                        else if (currentPath.StartsWith("/ja")) { langPrefix = "/ja"; }
                    }
                    <a class="nav-link" href="@($"{langPrefix}/ranking".Replace("//", "/"))">@Shared.NavRankings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">@Shared.NavUpdates</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">@Shared.NavAI</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">@Shared.NavApp</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="moreDropdown" role="button" data-bs-toggle="dropdown">
                        @Shared.NavMore
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/plans">@Shared.NavPlanning</a></li>
                        <li><a class="dropdown-item" href="/updates">@Shared.NavChangelog</a></li>
                    </ul>
                </li>
            </ul>

            <ul class="navbar-nav">
                <li class="nav-item dropdown me-2">
                    <a class="nav-link dropdown-toggle" href="#" id="cityDropdown" role="button" data-bs-toggle="dropdown">
                        上海
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="cityDropdown" style="max-height:60vh;overflow-y:auto;">
                        <li><a class="dropdown-item" href="/">北京</a></li>
                        <li><a class="dropdown-item" href="/">上海</a></li>
                        <li><a class="dropdown-item" href="/">广州</a></li>
                        <li><a class="dropdown-item" href="/">深圳</a></li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        @{
                            var path = Request.Path.ToLower();
                            string langMark = "简";
                            if (path.StartsWith("/zh-hant")) { langMark = "繁"; }
                            else if (path.StartsWith("/en")) { langMark = "EN"; }
                            else if (path.StartsWith("/ja")) { langMark = "日"; }
                        }
                        @langMark
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/">简体中文</a></li>
                        <li><a class="dropdown-item" href="/zh-hant">繁體中文</a></li>
                        <li><a class="dropdown-item" href="/en">English</a></li>
                        <li><a class="dropdown-item" href="/ja">日本語</a></li>
                    </ul>
                </li>
            </ul>

        </div>

    </div>
</nav>
