@{
    ViewBag.Title = "城市一览";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4 text-center">城市一览</h2>
    <div id="city-list" class="row g-4 justify-content-center">
        <!-- 城市卡片将由 JS 动态插入 -->
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/city_data.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        if (typeof METRO_CITY_DATA === 'undefined') return;
        const cityList = document.getElementById('city-list');
        METRO_CITY_DATA.forEach(city => {
            const col = document.createElement('div');
            col.className = 'col-6 col-sm-4 col-md-3 col-lg-2';
            col.innerHTML = `
                <div class="card h-100 text-center shadow-sm border-0">
                    <img src="/assets/img/metro/logo/logo_${city.key}.png" class="card-img-top mx-auto mt-3" alt="${city.cn}" style="width: 96px; height: 96px; object-fit: contain;">
                    <div class="card-body p-2">
                        <div class="card-title mb-0 fw-semibold">${city.cn}</div>
                    </div>
                </div>
            `;
            cityList.appendChild(col);
        });
    });
    </script>
}
