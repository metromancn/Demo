<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - MetroMan</title>

    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/site.css" />

    @RenderSection("HeadExtra", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-light border-bottom">
            <div class="container">
                <a class="navbar-brand fw-bold" href="~/">MetroMan</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNav" class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="~/en/app">APP</a></li>

                        <li class="nav-item dropdown">
                            <a id="navCities"
                               class="nav-link dropdown-toggle"
                               href="@Url.Content("~/en/cities")"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                CITIES
                            </a>

                            <div class="dropdown-menu p-3" aria-labelledby="navCities" style="min-width:280px;">
                                <input type="text" class="form-control mb-3" placeholder="Search 50+ cities…" id="citySearch">

                                <h6 class="dropdown-header">Popular Cities</h6>

                                <!-- 6 个热门城市（示例） -->
                                <a class="dropdown-item d-flex align-items-center" href="@Url.Content("~/en/cities/beijing")">
                                    <img src="@Url.Content("~/assets/img/metro/logo/logo_bj.png")" class="me-2 city-icon" alt=""> Beijing
                                </a>
                                <!-- …其余 5 个同理 … -->

                                <div class="dropdown-divider"></div>

                                <a class="dropdown-item d-flex align-items-center fw-semibold" href="@Url.Content("~/en/cities")">
                                    <img src="@Url.Content("~/assets/img/brand/favicon-32.png")" class="me-2 city-icon" alt=""> All Cities →
                                </a>
                            </div>
                        </li>

                        <li class="nav-item"><a class="nav-link" href="~/en/metro-rankings">RANKINGS</a></li>
                        <li class="nav-item"><a class="nav-link" href="~/en/ask-ai">ASK AI</a></li>
                        <li class="nav-item"><a class="nav-link" href="~/updates">UPDATES</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-4 border-top">
        © 2025 MetroMan   京ICP备17009405号‑1
    </footer>

    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/app.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
