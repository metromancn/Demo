
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeadExtra {
    <style>
        .line-card {
            color: #fff;
            text-decoration: none;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100px;
            border-radius: .5rem;
            box-shadow: 0 0 .2rem rgba(0,0,0,.1);
            transition: transform .15s;
        }

            .line-card:hover {
                transform: translateY(-2px);
            }

        .line-1 {
            background: #e40f0f
        }

        .line-2 {
            background: #0090d1
        }

        .line-3 {
            background: #fcb813
        }

        .line-4 {
            background: #00a65f
        }

        .line-5 {
            background: #8d5bac
        }

        .line-6 {
            background: #9cc3e8
        }
        /* 若有更多线路颜色，在此补充 .line-7 ... */
    </style>
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item"><a href="/en">Home</a></li>
        <li class="breadcrumb-item"><a href="/en/cities/shanghai/">Shanghai</a></li>
        <li class="breadcrumb-item active" aria-current="page">Lines</li>
    </ol>
</nav>

